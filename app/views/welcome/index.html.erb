<div class="latest-reviews">
	<h5>Latest Reviews</h5>
	
	<% @reviews.each_with_index do |review, index| %>
		<% if (index != 0) %>
			<div class="divider"></div>
		<% end %>
		<div class="row card hoverable review">
			<div class="col s4">
				<div class="commented-in">
					<h6><%= link_to(review.movie.title, movie_reviews_path(review.movie)) %></h6>
				</div>
			</div>
			<div class="col s8">
				<%= render partial: "review", locals: {review: review} %>
			</div>

		</div> <!-- .review -->
	<% end %>
	
</div> <!-- .lastest-reviews -->