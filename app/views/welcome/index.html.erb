<div class="container">
	<div class="main">
		<div class="row">
			<div class="col s12 m10 offset-m1">
				<div class="row latest-commented">
					<h3 class="center">Latest Comment</h3>

					<div class="col s12 m4 movie-poster center	">
						<%= image_tag(@review.movie.image(:med)) %>
					</div>

					<div class="col s12 m8 movie-info">
						<div class="row">
							<div class="col s12 movie-title">
								<h4><%= link_to(@review.movie.title, @review.movie) %></h4>
							</div>
							<div class="col s12 movie-synopsis">
								<h6><%= @review.movie.synopsis %></h6>
							</div>
							<div class="col s12 user-comment">
								<p><%= @review.comment %></p>
							</div>
						</div>
					</div> <!-- .movie-info -->
					
				</div>
			</div>
		</div>		
	</div>
</div>