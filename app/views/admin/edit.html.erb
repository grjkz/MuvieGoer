<div class="row">
	
	<%= form_for(@movie, :html => {multipart: true}) do |f| %>
		<div class="input-field">
				<%= f.text_field(:title) %>
				<%= f.label(:title, "Title", class: 'active') %>
			</div>
			<div class="input-field">
				<%= f.text_field(:synopsis) %>
				<%= f.label(:synopsis, "Synopsis", class: 'active') %>
			</div>
			
			<div class="file-field input-field">
	      <div class="btn">
	        <span>Image</span>
	        <%= f.file_field(:image) %>
	      </div>
	      <div class="file-path-wrapper">
	      	<%= text_field_tag(nil, nil, class: 'file-path') %>
	        <!-- <input class="file-path" type="text"> -->
	      </div>
	    </div>

			<div class="input-field">
				<%= f.button("Add Movie", class: "right btn waves-effect waves-light") %>
			</div>
	<% end %>
</div>