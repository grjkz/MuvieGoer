<div class="movies-list">
	<% @movies.each do |movie| %>

	<div class="row movie-card">

		<div class="col s12 m4 movie-poster center">
			<%= image_tag(movie.image.url(:med)) %>
		</div>

		<div class="col s12 m8 movie-info">
			<div class="row">
				<div class="col s12 movie-rating">
					<div class="left static-rating" data-value="<%= averageRating(movie) %>"></div>
					<div class="left"><%= averageRating(movie) %></div>
				</div>
				<div class="col s12 movie-title">
					<h4><%= link_to(movie.title, movie_reviews_path(movie)) %></h4>
				</div>
				<div class="col s12 movie-synopsis">
					<h6><%= movie.synopsis %></h6>
				</div>
				
			</div>
		</div>

	</div> <!-- .movie -->

	<% end %>
</div>